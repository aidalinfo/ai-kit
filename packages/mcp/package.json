{
  "name": "@ai_kit/mcp",
  "version": "1.0.0",
  "description": "Developer-friendly helpers to build Model Context Protocol servers with AI Kit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true });\"",
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "ai_kit",
    "devx"
  ],
  "author": "aidalinfo",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^3.25.4"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}
