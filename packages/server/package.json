{
  "name": "@ai_kit/server",
  "version": "0.1.0",
  "description": "HTTP server harness for AI Kit agents and workflows",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "server-kit": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "dev": "tsx src/cli.ts",
    "start": "node ./dist/cli.js",
    "test": "vitest run"
  },
  "keywords": [
    "ai",
    "workflow",
    "server"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.4",
    "hono": "^4.6.14",
    "zod": "^3.25.4"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^2.1.3"
  }
}
